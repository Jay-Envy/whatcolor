@model WhatColor.ViewModels.UserViewModel;
@{
    ViewData["Title"] = "User Page";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <p>
        <a asp-action="Create">Create new</a>
    </p>
    <p>
        <a asp-action="GrantPermissions">Permissions</a>
    </p>

    <table>
        <thead>
            <tr>
                <th class="col-md-4">
                    @Html.DisplayNameFor(v => v.Users[0].UserName)
                </th>
                <th class="col-md-4">
                    @Html.DisplayNameFor(v => v.Users[0].Country)
                </th>
                <th class="col-md-4">
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var user in Model.Users)
            {
                <tr>
                    <td class="col-md-4">
                        @Html.DisplayFor(modelItem => user.UserName)
                    </td>
                    <td class="col-md-4">
                        @Html.DisplayFor(modelItem => user.Country)
                    </td>
                    <td class="col-md-4">
                        <a asp-action="Details" asp-route-id="@user.Id">Details</a>
                        <a asp-action="Delete" asp-route-id="@user.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>