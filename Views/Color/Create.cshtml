@model WhatColor.ViewModels.CreateColorViewModel
@{
    ViewData["Title"] = "Create";

}

<h1>Create</h1>
<h4>Color</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HEX" class="control-label"></label>
                <input asp-for="HEX" class="form-control" />
                <span asp-validation-for="HEX" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RGB" class="control-label"></label>
                <input asp-for="RGB" class="form-control" />
                <span asp-validation-for="RGB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CMYK" class="control-label"></label>
                <input asp-for="CMYK" class="form-control" />
                <span asp-validation-for="CMYK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComplementaryHex" class="control-label"></label>
                <input asp-for="ComplementaryHex" class="form-control" />
                <span asp-validation-for="ComplementaryHex" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="ColorCategoryID" class="control-label"></label>
                <select id="ColorCategories" name="ColorCategories">
                    @foreach (var item in Model.ColorCategories)
                    {
                        <option>
                            @item.MainColor
                        </option>
                    }
                </select>
                <span asp-validation-for="ColorCategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Color">Back to list</a>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    
