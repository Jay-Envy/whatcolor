@model WhatColor.ViewModels.ColorViewModel

<table>
    <thead>
        <tr>
            <th class="col-md-4">
                &nbsp;
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Colors[0].Name)
            </th>
            <th class="col-md-4">
                @Html.DisplayNameFor(model => model.Colors[0].HEX)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Colors)
        {
            <tr>
                <td class="col-md-4">
                    <div a asp-action="ColorDetail" style="background-color: #@item.HEX; height: 50px; width: 150px;" />
                </td>
                <td class="col-md-4">
                    @item.Name
                </td>
                <td class="col-md-4">
                    @item.HEX
                </td>
            </tr>
        }
    </tbody>
</table>
